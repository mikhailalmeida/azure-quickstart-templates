{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "adPDCNicName": {
      "type": "string"
    },
    "adPDCNICIPAddress": {
      "type": "string"
    },
    "staticSubnetRef": {
      "type": "string"
    },
    "adBEAddressPoolID": {
      "type": "string"
    },
    "adRDPNATRuleID": {
      "type": "string"
    },
    "adBDCNicName": {
      "type": "string"
    },
    "adBDCNICIPAddress": {
      "type": "string"
    },
    "sqlVMNICName": {
      "type": "array"
    },
    "sqlSubnetRef": {
      "type": "string"
    },
    "sqlBEAddressPoolID": {
      "type": "string"
    },
    "spwebVMNICName": {
      "type": "array"
    },
    "spWebSubnetRef": {
      "type": "string"
    },
    "spWebBEAddressPoolID": {
      "type": "string"
    },
    "spappVMNICName": {
      "type": "array"
    },
    "spAppSubnetRef": {
      "type": "string"
    },
    "spCABEAddressPoolID": {
      "type": "string"
    },
    "spCANATRuleID": {
      "type": "string"
    },
    "sqlwNicName": {
      "type": "string"
    }
  },
  "resources": [
  {
    "name": "[parameters('adPDCNicName')]",
    "type": "Microsoft.Network/networkInterfaces",
    "location": "[parameters('location')]",
    "apiVersion": "2015-06-15",
    "properties": {
      "ipConfigurations": [
        {
          "name": "ipconfig1",
          "properties": {
            "privateIPAllocationMethod": "Static",
            "privateIPAddress" :"[parameters('adPDCNICIPAddress')]",
            "subnet": {
              "id": "[parameters('staticSubnetRef')]"
            },
            "loadBalancerBackendAddressPools": [
              {
                "id":"[parameters('adBEAddressPoolID')]"
              }
            ],
            "loadBalancerInboundNatRules": [
              {
                "id": "[parameters('adRDPNATRuleID')]"
              }
            ]
          }
        }
      ]
    }
  },
  {
    "name": "[parameters('adBDCNicName')]",
    "type": "Microsoft.Network/networkInterfaces",
    "location": "[parameters('location')]",
    "apiVersion": "2015-06-15",
    "properties": {
      "ipConfigurations": [
        {
          "name": "ipconfig1",
          "properties": {
            "privateIPAllocationMethod": "Static",
            "privateIPAddress" :"[parameters('adBDCNICIPAddress')]",
            "subnet": {
              "id": "[parameters('staticSubnetRef')]"
            }
          }
        }
      ]
    }
  },
  {
    "name": "[parameters('sqlVMNICName')[copyindex()]]",
    "type": "Microsoft.Network/networkInterfaces",
    "location": "[parameters('location')]",
    "apiVersion": "2015-06-15",
    "copy": {
      "name": "sqlnicLoop",
      "count": 2
    },
    "properties": {
      "ipConfigurations": [
        {
          "name": "ipconfig1",
          "properties": {
            "privateIPAllocationMethod": "Dynamic",
            "subnet": {
              "id": "[parameters('sqlSubnetRef')]"
            },
            "loadBalancerBackendAddressPools": [
              {
                "id":"[parameters('sqlBEAddressPoolID')]"
              }
            ]
          }
        }
      ]
    }
  },
  {
    "name": "[parameters('sqlwNicName')]",
    "type": "Microsoft.Network/networkInterfaces",
    "location": "[parameters('location')]",
    "apiVersion": "2015-06-15",
    "properties": {
      "ipConfigurations": [
        {
          "name": "ipconfig1",
          "properties": {
            "privateIPAllocationMethod": "Dynamic",
            "subnet": {
              "id": "[parameters('sqlSubnetRef')]"
            }
          }
        }
      ]
    }
  },
  {
    "name": "[parameters('spwebVMNICName')[copyindex()]]",
    "type": "Microsoft.Network/networkInterfaces",
    "location": "[parameters('location')]",
    "apiVersion": "2015-06-15",
    "copy": {
      "name": "spWebnicLoop",
      "count": 2
    },
    "properties": {
      "ipConfigurations": [
        {
          "name": "ipconfig1",
          "properties": {
            "privateIPAllocationMethod": "Dynamic",
            "subnet": {
              "id": "[parameters('spWebSubnetRef')]"
            },
            "loadBalancerBackendAddressPools": [
              {
                "id":"[parameters('spWebBEAddressPoolID')]"
              }
            ]
          }
        }
      ]
    }
  },
  {
    "name": "[parameters('spappVMNICName')[0]]",
    "type": "Microsoft.Network/networkInterfaces",
    "location": "[parameters('location')]",
    "apiVersion": "2015-06-15",
    "properties": {
      "ipConfigurations": [
        {
          "name": "ipconfig1",
          "properties": {
            "privateIPAllocationMethod": "Dynamic",
            "subnet": {
              "id": "[parameters('spAppSubnetRef')]"
            },
            "loadBalancerBackendAddressPools": [
              {
                "id":"[parameters('spCABEAddressPoolID')]"
              }
            ],
            "loadBalancerInboundNatRules": [
              {
                "id": "[parameters('spCANATRuleID')]"
              }
            ]
          }
        }
      ]
    }
  },
  {
    "name": "[parameters('spappVMNICName')[1]]",
    "type": "Microsoft.Network/networkInterfaces",
    "location": "[parameters('location')]",
    "apiVersion": "2015-06-15",
    "properties": {
      "ipConfigurations": [
        {
          "name": "ipconfig1",
          "properties": {
            "privateIPAllocationMethod": "Dynamic",
            "subnet": {
              "id": "[parameters('spAppSubnetRef')]"
            }
          }
        }
      ]
    }
  }
],
"outputs": {}
}
